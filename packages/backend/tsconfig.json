{
  "extends": "../../tools/typescript/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@presentation/*": [
        "./presentation/*"
      ],
      "@application/*": [
        "./application/*"
      ],
      "@domain/*": [
        "./domain/*"
      ],
      "@infrastructure/*": [
        "./infrastructure/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "types": [
      "bun-types",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}